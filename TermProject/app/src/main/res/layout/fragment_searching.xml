<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ED1560">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="PIN NUMBER를 적으십시오"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/insertPIN"
            android:textSize="20dp"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pinNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/insertPIN"
            android:layout_marginRight="20dp"
            android:hint="숫자로만 입력해주세요"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/insertPIN"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/negativeButton"
            android:layout_below="@id/pinNum"
            android:layout_alignRight="@+id/pinNum"
            android:text="취소"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/positiveButton"
            android:layout_below="@id/pinNum"
            android:layout_toLeftOf="@+id/negativeButton"
            android:text="찾기"/>

    </RelativeLayout>
</LinearLayout>